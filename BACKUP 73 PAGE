SELECT
       POR.DET_ID,
       PO_ID,
       DEMAND_DET_ID,
       ITM.ITEM_ID,
       ITM.ITEM_NAME,
       ITM.PACKING_SIZE,
       ITM.UNIT,
       ITM.PACKING,
       DRD.NO_TONS,
       DRD.NO_BAGS,
       POR.DEMAND_ORDER_STATUS,
       POR.CHANGE_TONS,
       POR.PO_BAGS,
       POR.RATE,
       POR.AMOUNT,
       POR.REMARKS
  FROM 
              AB_PO_DEMAND_REQ_DET DRD 
         JOIN AB_ITEMS_MASTER ITM   ON ITM.ITEM_ID=DRD.ITEM_ID
    LEFT JOIN AB_PO_PURCHASE_ORDER_DET POR ON POR.DEMAND_DET_ID=DRD.DET_ID
    WHERE
            PO_ID=:P73_PO_ID
